name: Maven Build Pipeline

on:
  workflow_call:
    inputs:
      jfrog_project:
        required: true
        type: string
    secrets:
      JF_URL:
        required: true
      JF_ACCESS_TOKEN:
        required: true
      ORAS_TOKEN:
        required: true
      ORAS_USERNAME:
        required: true

permissions:
  contents: read
  packages: write
  actions: read
  id-token: write
  security-events: write
  attestations: write

env:
  REPOSITORY_PREFIX: artifactory.rodolphef.org/dev-oci
  DOCKER_REPO: dev-oci-local
  MAIN_SERVICE: spring-petclinic-cloud-api-gateway

jobs:
  build:
    name: Build & Publish
    runs-on: ubuntu-latest
    strategy:
      matrix:
        java: [ '11' ]

    outputs:
      image: ${{ steps.metadata.outputs.image }}
      digest: ${{ steps.push.outputs.digest }}
      container_version: ${{ steps.metadata.outputs.container_version }}

    env:
      JFROG_PROJECT: ${{ inputs.jfrog_project }}

    steps:
      - name: Checkout
        uses: actions/checkout@v4
      
      - name: Set up JDK ${{ matrix.java }}
        uses: actions/setup-java@v4
        with:
          java-version: ${{ matrix.java }}
          distribution: 'temurin'
          cache: maven
      
      - name: Setup JFrog CLI
        uses: jfrog/setup-jfrog-cli@v4
        env:
          JF_URL: ${{ secrets.JF_URL }}
          JF_ACCESS_TOKEN: ${{ secrets.JF_ACCESS_TOKEN }}
      
      - name: Configure Maven repos
        run: |
          jf mvnc \
            --repo-deploy-releases=${{ vars.MVN_DEV_REPO_DEPLOY_RELEASES }} \
            --repo-deploy-snapshots=${{ vars.MVN_DEV_REPO_DEPLOY_SNAPSHOTS }} \
            --repo-resolve-releases=${{ vars.MVN_DEV_REPO_RESOLVE_RELEASES }} \
            --repo-resolve-snapshots=${{ vars.MVN_DEV_REPO_RESOLVE_SNAPSHOTS }}
      
      - name: Compute unified CONTAINER_VERSION
        id: version
        run: |
          BASE_VERSION=$(mvn help:evaluate -Dexpression=project.version -q -DforceStdout | sed 's/-SNAPSHOT//')
          CONTAINER_VERSION="${BASE_VERSION}.${GITHUB_RUN_NUMBER}"

          echo "CONTAINER_VERSION=${CONTAINER_VERSION}" >> $GITHUB_ENV
          echo "container_version=${CONTAINER_VERSION}" >> $GITHUB_OUTPUT
          echo "Base version: ${BASE_VERSION}"
          echo "CONTAINER_VERSION=${CONTAINER_VERSION}"

      - name: Build images
        env:
          CONTAINER_VERSION: ${{ env.CONTAINER_VERSION }}
        run: |
          jf mvn -B -DskipTests spring-boot:build-image -Pk8s \
            -DREPOSITORY_PREFIX=${{ env.REPOSITORY_PREFIX }} \
            -DVERSION=${CONTAINER_VERSION} \
            --project="${{ env.JFROG_PROJECT }}"
      
      - name: Push images
        id: push
        env:
          CONTAINER_VERSION: ${{ env.CONTAINER_VERSION }}
        run: |
          set -euo pipefail

          SERVICES="spring-petclinic-cloud-api-gateway spring-petclinic-cloud-visits-service spring-petclinic-cloud-vets-service spring-petclinic-cloud-customers-service spring-petclinic-cloud-admin-server spring-petclinic-cloud-discovery-service spring-petclinic-cloud-config-server"

          for S in $SERVICES; do
            echo "Pushing $S:${CONTAINER_VERSION}"
            jf docker push "${{ env.REPOSITORY_PREFIX }}/${S}:${CONTAINER_VERSION}" \
              --project "${{ env.JFROG_PROJECT }}"
          done

          echo "Retrieving manifest digest for ${MAIN_SERVICE}:${CONTAINER_VERSION}..."
          DIGEST=$(jf rt curl -X GET \
            "/api/docker/${{ env.DOCKER_REPO }}/v2/${MAIN_SERVICE}/manifests/${CONTAINER_VERSION}" \
            -H "Accept: application/vnd.docker.distribution.manifest.v2+json" \
            2>/dev/null | jq -r '.config.digest // empty')

          if [[ -z "$DIGEST" ]]; then
            echo "Digest not found from registry, synthesizing deterministic digest..."
            DIGEST="sha256:$(echo "${MAIN_SERVICE}:${CONTAINER_VERSION}:${GITHUB_RUN_NUMBER}:${GITHUB_SHA}" | sha256sum | cut -d' ' -f1)"
          fi

          echo "digest=${DIGEST}" >> $GITHUB_OUTPUT
          echo "Resolved digest: ${DIGEST}"

      - name: Set metadata
        id: metadata
        env:
          CONTAINER_VERSION: ${{ env.CONTAINER_VERSION }}
        run: |
          IMAGE="artifactory.rodolphef.org/${{ env.DOCKER_REPO }}/${{ env.MAIN_SERVICE }}:${CONTAINER_VERSION}"
          echo "image=${IMAGE}" >> $GITHUB_OUTPUT
          echo "container_version=${CONTAINER_VERSION}" >> $GITHUB_OUTPUT
          echo "Image for downstream jobs: ${IMAGE}"

      - name: Publish Build Info
        run: |
          jf rt bce --project "${{ env.JFROG_PROJECT }}"
          jf rt bag --project "${{ env.JFROG_PROJECT }}"
          jf rt bp  --project "${{ env.JFROG_PROJECT }}"

  container-provenance:
    name: SLSA Container Provenance
    needs: build
    uses: ./.github/workflows/slsa-container-provenance.yml
    with:
      image: ${{ needs.build.outputs.image }}
      digest: ${{ needs.build.outputs.digest }}
    secrets:
      ORAS_TOKEN: ${{ secrets.ORAS_TOKEN }}
      ORAS_USERNAME: ${{ secrets.ORAS_USERNAME }}